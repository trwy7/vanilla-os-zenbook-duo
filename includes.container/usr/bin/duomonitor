#! /usr/bin/env bash
# Runs at startup to monitor screen state
# Set /etc/duoconfig/monitortoggle to 1 to enable rotation and 0 to disable

# Check if /etc/duoconfig/monitortoggle exists
if [ ! -f /etc/duoconfig/monitortoggle ]; then
    echo "0" > /etc/duoconfig/monitortoggle
fi

# Read the value of /etc/duoconfig/monitortoggle
monitortoggle=$(cat /etc/duoconfig/monitortoggle)
if [ $monitortoggle -eq 1 ]; then
    duo watch-displays
fi